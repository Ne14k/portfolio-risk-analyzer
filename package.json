{
  "name": "myportfoliotracker",
  "version": "1.0.0",
  "description": "A web application for analyzing portfolio risk and optimization",
  "keywords": [
    "portfolio",
    "risk",
    "finance",
    "optimization"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "echo 'Backend only - no build needed'",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 127.0.0.1 --port 8000",
    "dev:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "start": "cd backend && python main.py",
    "heroku-postbuild": "cd backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
